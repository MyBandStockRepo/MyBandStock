-# Include access_schedule.js to attach lightbox listener to all .lightbox links
-# = javascript_include_tag 'access_schedule'
:javascript
  $(function() {
    $('a.lightbox').fancybox ({
      'transitionIn': 'fade',
      'transitionOut': 'fade',
      //'type': 'iframe',
      'autoScale': true,
      'autoDimensions': true,
      'centerOnScroll': true,
      'hideOnOverlayClick': false
    });
  });


%h1="#{band.name} - Access Schedule"
-for series in band.live_stream_series
  %h2= series.title
  -for stream in series.streamapi_streams
    %ul.access-schedule-list
      %li.stream-name
        ="#{stream.title}"
      %li
        ="Begins - #{stream.starts_at}"
      %li
        ="Ends - #{stream.ends_at}"
      %li
        =link_to 'Begin broadcast', { :controller => 'streamapi_streams', :action => 'broadcast', :id => stream.id, :nolayout => true }, :class => 'lightbox'
      %li
        =link_to 'Watch', { :controller => 'streamapi_streams', :action => 'view', :id => stream.id }, :class => 'lightbox'

