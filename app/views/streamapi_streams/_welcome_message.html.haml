-if user.first_name.nil? || user.first_name == ''
  = "Welcome, #{ user.email }. You currently have "
-else
  = "Welcome, #{ user.first_name }. You currently have "
%span.share_amount
  - user_shares = ShareTotal.where(:user_id => user.id, :band_id => band.id).first
  -if user_shares
    = user_shares = user_shares.net
  -else
    - user_shares = 0
    0
-# Pluralize 'share'
= ((user_shares == 1 || user_shares =~ /^1(\.0+)?$/) ? 'share' : 'shares')
in 
%span.welcome_band_name<
  = band.name
%span> .
