= form_for(@streamapi_stream) do |f|
	= f.error_messages
  .field
		= f.label :title
		%br
		= f.text_field :title
	
  .field
		= f.label :starts_at
		%br
		= f.datetime_select :starts_at

	.field
		= f.label :ends_at
		%br
		= f.datetime_select :ends_at

	.field
		= f.label :layout_path
		%br
		= f.text_field :layout_path

	.field
		= f.label :skin_path
		%br
		= f.text_field :skin_path

	.field
		= f.label :public
		%br
		= f.check_box :public

	.actions
		= f.submit

