#head_top
  = link_to root_path, {:id => 'header-logo-link'} do
    = image_tag('/images/header/mbs_logo.png', :alt => 'MyBandStock')
  .loggedin
    .loggedin_leftborder
    #logged_info
      #user_email
        =link_to user.email, user_path(:id => user.id)

      = link_to '', me_account_path(:id => user.id), :class => 'account'
    = link_to '', logout_path, :class => 'logout'
  -if user.site_admin
    = render :partial => 'admin/admin_bar'

#head_bottom
  #logo_float
    = link_to '', root_path, :class => 'navlogo'

  = link_to '', bands_path, :class => ['nav', 'navbands']
  = link_to '', faq_path, :class => ['nav', 'navfaq']
  = link_to '', about_path, :class => ['nav', 'navabout']
  = link_to '', 'http://blog.mybandstock.com/', :class => ['nav', 'navblog']
