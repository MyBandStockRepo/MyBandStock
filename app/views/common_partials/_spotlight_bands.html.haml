%h3.top-bands Spotlight Bands
%ol.ranking-list
  -spotlight_bands.in_groups_of(2) do |s|
    %li.odd
      %strong.username<
        =link_to s[0].name, :controller => 'bands', :action => 'show', :band_short_name => s[0].short_name
      %strong.shares<
        ="#{s[0].stocks_sold} shares"
    -if s[1]
      %li.even
        %strong.username<
          =link_to s[1].name, :controller => 'bands', :action => 'show', :band_short_name => s[1].short_name
        %strong.shares<
          ="#{s[1].stocks_sold} shares"

