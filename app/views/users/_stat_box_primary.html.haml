#overview-primary
  %h2<
    =user.nickname
    %br
      %strong<
        -if user.genre_1
          ="#{user.genre_1.name} /" 
        -if user.genre_2
          ="#{user.genre_2.name} /"
        -if user.genre_3
          ="#{user.genre_3.name}"
  .stats
    %dl#fan
      %dt Invested Artists:
      %dd<
        =user.invested_artists.size
      %dt Friends:
      %dd<
        =user.friends.size
      %dt Concerts Attended:
      %dd Coming Q4 2009
      %dt Join Date:
      %dd<
        =user.created_at.strftime("%m/%d/%Y")
      %dt.profile Profile Link
      %dd.profile<
        =link_to 'Click Here', :controller => 'users', :action => 'show', :id => user.id
      %dt.shares Total Shares:
      %dd.shares<
        =user.total_shares
               
      %dt.rank MBS Ranking:
      %dd.rank Coming 2009
