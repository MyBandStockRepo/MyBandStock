.orange_bar
  .placement_edituserprofilepic
  .placement_edituserprofile EDIT USER PROFILE
  .orange_divider
#content_login_bg
  #login_wrap
    -if @user_is_pending
      .notice You have not yet activated your account. Please enter your desired password below and click Submit.
    = form_for(@user) do |f|
      =render :partial => 'required_form', :locals => {:f => f}
      .fieldrow
        .fieldleft
          .formbutton
            = f.submit 'SUBMIT'
          -if params[:action] && params[:action] == 'edit'
            .formbutton_nextto
              = link_to 'BACK', session[:last_clean_url]

    .clear
.orange_bar
  .placement_edituserprofilepic
  .placement_edituserprofile CONNECTED SOCIAL NETWORKS
  .orange_divider		
#content_login_bg
  #login_wrap	
    - if @authentications
      - unless @authentications.empty?
        %p
          %strong You can sign in to this account using:
        .authentications
          - for authentication in @authentications
            .authentication
              = image_tag "authbuttons/#{authentication.provider}_32.png", :size => "32x32"
              .provider
                = authentication.provider.titleize
              .uid
                = authentication.uid
              = link_to "X", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove"
          .clear    
      %p
        %strong Add another service to sign in with:
    -else
      %p
        %strong Sign in through one of these services:


    %a{:href => "/auth/twitter", :class => "auth_provider"}
      = image_tag "authbuttons/twitter_64.png", :size => "64x64", :alt => "Twitter"
      Twitter
    %a{:href => "/auth/facebook", :class => "auth_provider"}
      = image_tag "authbuttons/facebook_64.png", :size => "64x64", :alt => "Facebook"
      Facebook
    .clear