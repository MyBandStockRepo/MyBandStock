#content-utility.control-panel
  #utility-overview
    =render :partial => 'users/stat_box_primary', :locals => {:user => @user}
    #overview-secondary
      =link_to image_tag(@user.path_to_headline_image(:center_graphic)), :controller => 'users', :action => 'edit', :id => @user.id, :anchor => 'photo'
  #utility-player
    =render :partial => 'common_partials/audio_player', :locals => {:playlist_url => @random_band.playlist_url}
    =render :partial => 'common_partials/user_player_playlist', :locals => {:playlist_songs => @random_band.playlist_songs}
  =render :partial => "control_panel_tabs"
#content-primary.friends
  .content-section
    .table-sort
      -form_tag({:controller => 'users', :action => "manage_friends"}, :method => 'get') do
        .location
          Within
          =render :partial => "common_partials/miles_away_select", :locals => {:passed => @miles_away_passed}
          miles of:
          %input{:type => 'text', :name => 'zipcode', :value => @zipcode_passed}
          (zipcode only for now)
        =image_submit_tag "/images/buttons/control-panel/btn-sort.png", {:alt => "Sort", :width => "108", :height => "76", :class => "sort"}
      
    %table{:border => '0', :cellpadding => '0', :cellspacing => '0', :class => 'utility-table'}
      %thead
        %tr.table-header
          %th.nick Nickname
          %th.worth Net Worth
          %th.rank Ranking
          %th.location Location
          %th.utility Actions
          %tbody
          -if (@friends.empty?)
            %tr
              %td{:colspan => "5", :class => "no-content"}
                No Results Returned
          -else
            -if @query_empty
              %tr
                %td{:colspan => "5", :class => "no-content"}
                  No Results Returned.  Below is a random list of some of your friends.
            -for friend in @friends
              %tr
                %td<
                  =link_to friend.nickname, user_url(friend.id)
                %td<
                  =friend.total_shares
                %td.rank TBD
                %td<
                  =friend.location_zoom_city
                %td.utility<
                  =link_to 'unfriend', :controller => 'users', :action => 'remove_user_friend', :id => friend.id
                  
  #sidebar
    .content-ad
      =render :partial => 'common_partials/medium_ad_block'
      %p Adver
