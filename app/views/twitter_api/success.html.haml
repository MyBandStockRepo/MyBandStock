-if @external
  -if flash[:error]
    .errbox
      = flash[:error]
.success_box
  %h3 Success!
  %p
    You just earned
    %span.grey99
      = @shares
    shares in the band
    %span.grey99
      = @band.name 
    for retweeting their status.
  -if @show_close_button
    .formbutton{ :style => 'float: left' }
      = link_to 'CLOSE', '', :onclick => 'parent.jQuery.fancybox.close(); top.location.href = top.location.href;'

