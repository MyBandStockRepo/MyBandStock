= form_for(@recorded_video) do |f|
  = f.error_messages

  .field
    = f.label :public_hostid
    %br
    = f.text_field :public_hostid

  .field
    = f.label :url
    %br
    = f.text_field :url

  .field
    = f.label :public
    %br
    = f.check_box :public

  .field
    = f.label :streamapi_stream_id
    %br
    = collection_select 'recorded_video', 'streamapi_stream_id', @streamapi_streams, 'id', 'title', :class => 'select'
    
  .field
    = f.label :duration
    %br
    = f.text_field :duration

  .actions
    = f.submit
