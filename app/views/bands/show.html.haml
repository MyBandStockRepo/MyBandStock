%h1.orange_bar
  = @band.name
  
#profile-left-column
  -if @band.band_photo && @band.band_photo != ''
    = image_tag @band.band_photo, :id => 'profile-band-photo', :alt => @band.name
  .profile-top-ten-container
    = render :partial => 'top_ten_shareholders', :locals => { :top_ten => @top_ten }

  -# Member since =@band.created_at.strftime("%m/%d/%Y")

  -if @band.admins.collect{ |user| user.id}.include? session[:user_id]
    #manage-band
      %p You are a manager for this band.
      =link_to_unless_current 'Manage', edit_band_path(:id => @band.id)
  #bio.widget-box
    .profile-category Bio
    %p
      =@band.bio

#profile-right-column
  - unless @band_twitter_not_authorized
    .recent_TWETZ
      %h1 Recent Band Tweets
      - if @user_twitter_not_authorized
        = link_to 'Authorize your Twitter Account with MyBandStock', {:controller => 'twitter_api', :action => 'create_session', :redirect_from_twitter => @request_uri}
			
      - else
        %p 
          Currently authenticated with the Twitter account 
          = @twit_user.screen_name
          = link_to 'Authorize a different Twitter Account with MyBandStock', {:controller => 'twitter_api', :action => 'create_session', :redirect_from_twitter => @request_uri}
      = render :partial => "twitter_api/twitter_box", :locals => {:band_id => @band.id, :tweets => @band_tweets}

  .access-schedule
    = render :partial => 'live_stream_series/by_band', :locals => { :band => @band, :can_broadcast => @can_broadcast }

= render :partial => 'share_codes/redeem_widget'

