#content-utility.manage-budget
  #utility-overview
    %h2.manage-budget Project
    #overview-primary
      .stats-box  
        %h3 Current Project
        .album-news<
          -if @band.active_project
            =link_to @band.active_project.name, project_url(@band.active_project)
          -else
            No Active Project!
          %dl
            %dt
              Value:
            %dd<
              -if @band.active_project
                ='$' + @band.active_project.value.to_s
              -else
                N/A
          -if @band.active_project
            %p<
              =@band.active_project.description

      %a.call-to-action
      =link_to image_tag("/images/buttons/control-panel/btn-propose-project.png", :alt => "Propose a New Project", :width => "302", :height => "97" ), :controller => 'projects', :action => 'new', :band_id => @band.id
    #overview-secondary
      
  #utility-ad
    =render :partial => 'common_partials/medium_ad_block'
    %p Advertisement
  =render :partial => "control_panel_tabs"
#content-primary
  -unless @band.projects.empty?
    -for project in @band.projects
      .content-section{:id => "project-#{project.id}"}
        -ledger_entries_collection = project.ledger_entries.paginate(:page => params["project_#{project.id}_ledger_entries_page"], :per_page => 9)
        .section-primary{:id => "project-#{project.id}-ledger-entries"}
          %h2 
            =project.name
            =": $"
            =project.value.to_i
            -unless project.approved
              -url_hash = {:controller => 'projects', :action => 'destroy', :id => project.id}
              =link_to_remote 'delete', {:url => url_hash, :confirm => 'This will delete this project and all ledger entries permanently.  Continue?'}, :href => url_for(url_hash)
          .status
            -if project.approved
              %h3.completed
                Approved
            -else
              %h3.incomplete
                Approved
            -if project.active
              %h3.completed
                Active
            -else
              %h3.incomplete
                Active
            -if project.complete
              %h3.completed
                Complete
            -else
              %h3.incomplete
                Complete
          %table{:id => "project-#{project.id}-ledger-entries-list", :border => '0', :cellpadding => '0', :cellspacing => '0', :class => 'utility-table'}
            %thead
              %tr.table-header    
                %th.amount $Amount
                %th.description Description
                %th.link Link
                %th.actions Actions
            %tfoot
              %tr
                %td{:colspan => "5"}
                  =will_paginate ledger_entries_collection, :param_name => "project_#{project.id}_ledger_entries_page"
                  %div{:id => "project-#{project.id}-ledger-entries-footer"} Add a new ledger entry using the form on the right!
            %tbody
              =render :partial => 'ledger_entries/list_row', :collection => ledger_entries_collection, :as => :ledger_entry
              -if ledger_entries_collection.empty?
                %tr
                  %td.no-content{:colspan => "5"}  
                    No Ledger Entries submitted yet

        .section-sidebar{:id => "quick-ledger-entry-project-#{project.id}"}
          -@fresh_ledger_entry.project_id = project.id
          =render :partial => 'ledger_entries/short_add', :locals => {:fresh_ledger_entry => @fresh_ledger_entry}   
  -else
    .no-content
      No Active Projects.  Please apply to create a new one using the orange button.