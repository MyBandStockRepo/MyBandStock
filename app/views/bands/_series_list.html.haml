#jqAccordion
  -band.live_stream_series.each do |series|
    .dark_bar
      .twothirds_info
        .expand_series{ :title => "Expand series (#{ series.streamapi_streams.count } more)" }
          +
        .placement_streamname
          = link_to series.title, nil, :class => 'link_streamname'
        .placement_starttime
          = series.starts_at.strftime("%m.%d.%Y")
          %span.dark_accent
            = '|'
          = series.starts_at.strftime("%I:%M%p")
          %span.dark_accent ET
        .placement_endtime
          = series.ends_at.strftime("%m.%d.%Y")
          %span.dark_accent
            = '|'
          = series.ends_at.strftime("%I:%M%p")
          %span.dark_accent ET
    .stream_list
      -series.streamapi_streams.each do |stream|
        .stream_entry
          %span.stream_name
            = stream.title
          = link_to 'broadcast', { :controller => 'streamapi_streams', :action => 'broadcast', :id => stream.id, :lightbox => true }, :class => 'lightbox'

